@{
    ViewBag.Title = "Home Page";
}

<section id="main-slider" class="no-margin">
    <div class="carousel slide" data-ride="carousel" id="home-carousel">
        <ol class="carousel-indicators">
            <li data-target="#home-carousel" data-slide-to="0" class="active"></li>
            <li data-target="#home-carousel" data-slide-to="1"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
            <div class="item active" style="background-image: url('/Content/images/slider/bg1.jpg')">
                <div class="container" style="margin-left: 5vw">
                    <div class="row">
                        <div class="col-md-5">
                            <div class="carousel-content">
                                <h1 class="animation animated-item-1">Make yourself healthy</h1>
                                <div class="animation animated-item-2">
                                    Everyone needs a health body. Start your journey right now!
                                    Try our new map application to plan your day and make your reservation on the map!
                                </div>
                                <a class="btn-slide animation animated-item-3" href="/Location">Get Started</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--/.item-->
            <div class="item" style="background-image: url('/Content/images/slider/bg2.jpg')">
                <div class="container" style="margin-left: 5vw">
                    <div class="row">
                        <div class="col-md-5">
                            <div class="carousel-content">
                                <h1 class="animation animated-item-1">Make yourself healthy</h1>
                                <div class="animation animated-item-2">
                                    Use our map application to arrange your routine!
                                </div>
                                <a class="btn-slide animation animated-item-3" href="/Location">Get Started</a>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <!--/.item-->
        </div>
        <!--/.carousel-inner-->
    </div>
    <!--/.carousel-->
    <a class="prev hidden-xs hidden-sm" href="#home-carousel" data-slide="prev">
        <i class="fa fa-chevron-left"></i>
    </a>
    <a class="next hidden-xs hidden-sm" href="#home-carousel" data-slide="next">
        <i class="fa fa-chevron-right"></i>
    </a>
</section>
<!--/#main-slider-->


<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/jquery.prettyPhoto.js"></script>
<script src="~/Scripts/jquery.isotope.min.js"></script>
<script src="~/Scripts/main.js"></script>